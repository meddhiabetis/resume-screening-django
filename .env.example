# === Django Settings ===
DJANGO_SECRET_KEY=your-django-secret-key
DJANGO_DEBUG=True

# === Database Settings ===
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# === Pinecone Vector Database ===
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX=your-pinecone-index

# === Neo4j Graph Database ===
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=your-neo4j-database

# === Mistral API ===
MISTRAL_API_KEY=your-mistral-api-key

# === Google OAuth for Gmail Fetch ===
GOOGLE_OAUTH_CLIENT_SECRETS=/absolute/path/to/google_oauth.json
GOOGLE_OAUTH_SCOPES=openid,https://www.googleapis.com/auth/userinfo.profile,https://www.googleapis.com/auth/userinfo.email,https://www.googleapis.com/auth/gmail.readonly
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/accounts/gmail/callback/

# === Redis for Celery ===
REDIS_URL=redis://localhost:6379/0

# Add additional env variables as needed...